<div class="page-header">
  <h1>
    Badges

    <a href="/badges/new" class="btn btn-lg btn-success">New Badge</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Photo url</th>

        <th>Caption</th>

        <th>Actions</th>
      </tr>

      <% @badges.each do |badge| %>
      <tr>

        <td><%= badge.user_id %></td>

        <td><%= badge.photo_url %></td>

        <td><%= badge.caption %></td>

        <td>

          <a href="/badges/<%= badge.id %>" class="btn btn-primary">Show</a>
          <a href="/badges/<%= badge.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_badge/<%= badge.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
