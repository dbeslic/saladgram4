<div class="page-header">
  <h3>Badge #<%= @badge.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>User</dt>
      <dd><%= @badge.user_id %></dd>


      <dt>Photo url</dt>
      <dd><%= @badge.photo_url %></dd>


      <dt>Caption</dt>
      <dd><%= @badge.caption %></dd>


    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/badges" class="btn btn-primary">
        Back
      </a>
      <a href="/badges/<%= @badge.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_badge/<%= @badge.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>

    </div>
  </div>
</div>
