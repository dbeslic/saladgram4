<div class="page-header">
  <h3>Connection #<%= @connection.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Chat</dt>
      <dd><%= @connection.chat_id %></dd>


      <dt>User</dt>
      <dd><%= @connection.user_id %></dd>


    </dl>

    <div class="btn-group btn-group-justified">
      

      <a href="/connections" class="btn btn-primary">
        Back
      </a>
      <a href="/connections/<%= @connection.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_connection/<%= @connection.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>

      <%= link_to "Back", connections_path, class: "btn btn-primary" %>
      <%= link_to "Edit", edit_connection_path(@connection.id), class: "btn btn-warning" %>
      <%= link_to "Delete", connection_path(@connection.id), class: "btn btn-danger", method: 'delete' %>

    </div>
  </div>
</div>
