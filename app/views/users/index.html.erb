<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1> All Users</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Profile</th>

        <th>Name</th>

        <th>Badges</th>

        <th>User ID</th>
      </tr>

      <% @users.each do |user| %>
      <tr>

        <td>
          <a href="/users/<%= user.id %>"><img src="<%= user.avatar_url %>" class="img-circle" width= 50 pt></a>
        </td>

        <td>
          <a href="/users/<%= user.id %>"><%= user.user_name %></a>
        </td>

        <td><%= user.first_name %> <%= user.last_name %></td>

        <td>
          Badges List
        </td>

        <td>
        <%= user.id %>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
