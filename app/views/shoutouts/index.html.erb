<div class="page-header">
  <h1>
    Shoutouts

    <a href="/shoutouts/new" class="btn btn-lg btn-success">New Shoutout</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Post</th>

        <th>Comment</th>

        <th>Actions</th>
      </tr>

      <% @shoutouts.each do |shoutout| %>
      <tr>

        <td><%= shoutout.user_id %></td>

        <td><%= shoutout.post_id %></td>

        <td><%= shoutout.comment %></td>

        <td>

          <a href="/shoutouts/<%= shoutout.id %>" class="btn btn-primary">Show</a>
          <a href="/shoutouts/<%= shoutout.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shoutout/<%= shoutout.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
