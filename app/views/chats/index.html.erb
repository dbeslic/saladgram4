<div class="page-header">
  <h1>
    Chats

    <a href="/chats/new" class="btn btn-lg btn-success">New Chat</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Title</th>

        <th>Photo url</th>

        <th>Prize</th>

        <th>User</th>

        <th>Actions</th>
      </tr>

      <% @chats.each do |chat| %>
      <tr>

        <td><%= chat.title %></td>

        <td><%= chat.photo_url %></td>

        <td><%= chat.prize_id %></td>

        <td><%= chat.user_id %></td>

        <td>

          <a href="/chats/<%= chat.id %>" class="btn btn-primary">Show</a>
          <a href="/chats/<%= chat.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_chat/<%= chat.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
