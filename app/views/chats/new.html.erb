<!-- Validation failure messages -->
<% if @chat.errors.any? %>
  <% @chat.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Chat</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_chat" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for title -->

      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>


        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @chat.title %>">

      </div>



      <!-- Label and input for photo_url -->

      <div class="form-group">
        <label for="photo_url" class="control-label">
          Photo url
        </label>


        <input type="text" id="photo_url" name="photo_url" placeholder="Photo url" class="form-control" value="<%= @chat.photo_url %>">

      </div>



      <!-- Label and input for prize_id -->

      <div class="form-group">
        <label for="prize_id" class="control-label">
          Prize
        </label>


        <input type="text" id="prize_id" name="prize_id" placeholder="Prize" class="form-control" value="<%= @chat.prize_id %>">

      </div>



      <!-- Label and input for user_id -->

      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>


        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @chat.user_id %>">

      </div>



      <button class="btn btn-success">
        Create Chat
      </button>
      or
      <a href="/chats">Cancel</a>

    </form>

  </div>
</div>
