<!-- Validation failure messages -->
<% if @chat.errors.any? %>
<% @chat.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Create a New Chat</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/chats" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for title -->

      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>


        <input type="text" id="title" name="title" placeholder="Give your chat a name" class="form-control" value="<%= @chat.title %>">

      </div>



      <!-- Label and input for photo_url -->

      <div class="form-group">
        <label for="photo_url" class="control-label">
          Photo url
        </label>


        <input type="text" id="photo_url" name="photo_url" placeholder="Give your chat a pic" class="form-control" value="<%= @chat.photo_url %>">

      </div>



      <!-- Label and input for prize_id -->

      <div class="form-group">
        <label for="prize_id" class="control-label">
          Prize
        </label>

        <input type="text" id="prize_id" name="prize_id" placeholder="Enter ID from list below" class="form-control" value="<%= @chat.prize_id %>">
      </div>

      <!-- Label and input for user_id -->

      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
      </div>



      <button class="btn btn-success">
        Create Chat
      </button>
      or
      <a href="/chats">Cancel</a>

    </form>



  </div>

  <div class="col-md-12 margin-above-top-md">
    <h3>Prize List: entire id from list below</h3>

    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Prize
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">

        <% @prizes.each do |prize| %>

        <li>id: <%= prize.id %> prize: <%= prize.name %> from <%= prize.sponsor %></li>

        <% end %>
        <li role="separator" class="divider"></li>
        <li>None</li>
      </ul>
    </div>
  </div>


</div>
