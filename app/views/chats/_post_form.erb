<form enctype="multipart/form-data" action="/chat_post" method="post">

  <!-- Hidden input for authenticity token to protect from forgery -->
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

  <div class="form-group">
    <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">
  </div>

  <div class="form-group">
    <input type="hidden" id="chat_id" name="chat_id" placeholder="Chat" class="form-control" value="<%= @chat.id %>">
  </div>

  <div class="form-group">
    <label for="photo_url" class="control-label">Photo upload</label>
    <input type="file" id="photo_url" name="photo_url" placeholder="Photo url" class="form-control" value="<%= @post.photo_url %>">
  </div>

  <div class="form-group">
    <label for="caption" class="control-label">Caption</label>
    <input type="text" id="caption" name="caption" placeholder="Caption" class="form-control" value="<%= @post.caption %>">
  </div>

  <button class="btn btn-success">
    <i class="fa fa-camera"></i>
    Post!
  </button> or
</form>


<a href="/chats/<%= @chat.id %>/stats" class="btn btn-default">
  <i class="fa fa-line-chart"></i>
  Stats
</a>


