
<div class="container bootstrap snippet">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="portlet portlet-default">

        <div class="portlet-heading">
          <div class="portlet-title">
            <h4><img src="<%= @chat.photo_url %>" class="img-circle" width = 50 pt> <%= @chat.title %></h4>
            <h5><i class="fa fa-circle text-green"></i>
              <a href="/users/<%= @chat.user_id %>">
                  <%= @chat.user.user_name %>
              </a>
              <% @chat.participants.each do |member|%>
              , <a href="/users/<%= member.id %>"><%= member.user_name %></a>
              <% end %>
          </h5>
      </div>
      <div class="clearfix"></div>
  </div>

  <div id="chat" class="panel-collapse collapse in">
      <div>
        <div class="portlet-body chat-widget" style="overflow-y: auto; width: auto; height: 500px;">
           <hr>

           <% @chat.posts.each do |post| %>
           <div class="row">
              <div class="col-lg-12">
                <div class="media">

                  <a class="pull-left" href="/users/<%= post.user_id %>">
                    <img class="media-object img-circle" src="<%= post.user.avatar_url %>" alt="" width= 40 pt>
                </a>

                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="/users/<%= post.user_id %>"><%= post.user.user_name %></a>
                        <span class="small pull-right"><%= post.created_at %></span>
                    </h4>

                    <img src="<%= post.photo_url %>" width = 250 pt>
                    <p><%= post.caption %></p>
                </div>

            </div>
        </div>
    </div>
    <hr>
    <% end %>

</div>
</div>

