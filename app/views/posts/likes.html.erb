<html>

<div class="page-header">
  <h1>
   <i class="fa fa-heart"></i>
   <%= @post.likes.count %>
 </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Post</th>

        <th>Actions</th>
      </tr>

      <% @post.likes.each do |like| %>
      <tr>

        <td>
          <a href="/users/<%= like.user_id %>"><img src="<%= like.user.avatar_url %>" width = 80 pt></a>
          <a href="/users/<%= like.user_id %>"><%= like.user.user_name %></a> liked:
        </td>

        <td>
          <a href = "/posts/<%= like.post_id %>">
            <img src="<%= like.post.photo_url %>" class = "img-responsive" width = 200 pt>
          </a>
        </td>

        <td>

          <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>
          <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


</html>
