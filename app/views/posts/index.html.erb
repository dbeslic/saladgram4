<div class="page-header">
  <h1>
    Posts

    <a href="/posts/new" class="btn btn-lg btn-success">New Post</a>

  </h1>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Chat</th>

        <th>Photo url</th>

        <th>Caption</th>

        <th>Actions</th>
      </tr>

      <% @posts.each do |post| %>
      <tr>

        <td><%= post.user.user_name %></td>

        <td><%= post.chat.title %></td>

        <td><img src="<%= post.photo_url %>" width = 200 pt></td>

        <td><%= post.caption %></td>

        <td>

          <a href="/posts/<%= post.id %>" class="btn btn-primary">Show</a>
          <a href="/posts/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_post/<%= post.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
