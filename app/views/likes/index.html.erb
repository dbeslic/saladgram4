<div class="page-header">
  <h1>
    All Likes

    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Post</th>

        <th>Actions</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>

        <td>
          <a href="/users/<%= like.user_id %>"><%= like.user.user_name %></a> liked:
        </td>

        <td>
          <a href = "/posts/<%= like.post_id %>">
            <img src="<%= like.post.photo_url %>" class = "img-responsive" width = 200 pt>
          </a>
        </td>

        <td>

          <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>
          <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/likes/<%= like.id %>" data-method="delete" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
