<div class="page-header">
  <h1>
    Prizes

    <a href="/prizes/new" class="btn btn-lg btn-success">New Prize</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Name</th>

        <th>Picture url</th>

        <th>Sponsor</th>

        <th>Prize ID</th>

        <th>Actions</th>
      </tr>

      <% @prizes.each do |prize| %>
      <tr>

        <td><%= prize.name %></td>

        <td>
          <a href = "/prizes/<%= prize.id %>">
            <img src="<%= prize.picture_url %>" class="img-responsive" width = 150 pt>
          </a>
        </td>

        <td><%= prize.sponsor %></td>

        <td><%= prize.id %></td>

        <td>

          <a href="/prizes/<%= prize.id %>" class="btn btn-primary">Show</a>
          <a href="/prizes/<%= prize.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/prizes/<%= prize.id %>" data-method="delete" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
