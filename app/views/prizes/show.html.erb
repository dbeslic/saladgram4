<div class="page-header">
  <h3>Prize #<%= @prize.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Sponsor</dt>
      <dd><%= @prize.sponsor %></dd>

      <dt>Name</dt>
      <dd><%= @prize.name %></dd>

      <dt>Picture</dt>
      <dd>
        <img src="<%= @prize.picture_url %>" class="img-responsive" width = 450 pt>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/prizes" class="btn btn-primary">
        Back
      </a>
      <a href="/prizes/<%= @prize.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/prizes/<%= @prize.id %>" data-method="delete" class="btn btn-danger" rel="nofollow">
        Delete
      </a>

    </div>
  </div>
</div>
