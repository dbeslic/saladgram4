<!-- Validation failure messages -->
<% if @prize.errors.any? %>
<% @prize.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Add Prize</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/prizes" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for name -->

      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>


        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @prize.name %>">

      </div>



      <!-- Label and input for picture_url -->

      <div class="form-group">
        <label for="picture_url" class="control-label">
          Picture url
        </label>


        <input type="text" id="picture_url" name="picture_url" placeholder="Picture url" class="form-control" value="<%= @prize.picture_url %>">

      </div>



      <!-- Label and input for sponsor -->

      <div class="form-group">
        <label for="sponsor" class="control-label">
          Sponsor
        </label>


        <input type="text" id="sponsor" name="sponsor" placeholder="Sponsor" class="form-control" value="<%= @prize.sponsor %>">

      </div>

      <button class="btn btn-success">
        Create Prize
      </button>
      or
      <a href="/prizes">Cancel</a>

    </form>

  </div>
</div>


<div class="row">
  <div class="col-md-12">
    
    <%= form_for(@prize, url: prizes_path, method: 'post') do |f| %>
      <%= f.label :name, class:  "control-label" %>
      <%= f.text_field :name, name: "name", class: "form-control" %>
      
      <%= f.label :picture_url, class:  "control-label" %>
      <%= f.text_field :picture_url, name: "picture_url", class: "form-control" %>

      <%= f.label :sponsor, class:  "control-label" %>
      <%= f.text_field :sponsor, name: "sponsor", class: "form-control" %>
      
      <%= f.submit "Create Prize", class: "btn btn-success" %>
    <% end %>
    
    or
    <%= link_to "Cancel", prizes_path %>
    
  </div>
</div>
