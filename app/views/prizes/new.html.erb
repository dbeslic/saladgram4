<!-- Validation failure messages -->
<% if @prize.errors.any? %>
  <% @prize.errors.full_messages.each do |message| %>
  <div class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= message %>
  </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Prize</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@prize, url: prizes_path, method: 'post') do |f| %>

      <%= f.label :name, class:  "control-label" %>
      <%= f.text_field :name, name: "name", class: "form-control" %>
      
      <%= f.label :picture_url, class:  "control-label" %>
      <%= f.text_field :picture_url, name: "picture_url", class: "form-control" %>

      <%= f.label :sponsor, class:  "control-label" %>
      <%= f.text_field :sponsor, name: "sponsor", class: "form-control" %>

      <%= f.hidden_field :user_id, name: "user_id", class: "form-control" %>
      
      
      <%= f.submit "Create Prize", class: "btn btn-success margin-above-top-sm" %>
    <% end %>
    
    or
    <%= link_to "Cancel", prizes_path %>
    
  </div>
</div>
