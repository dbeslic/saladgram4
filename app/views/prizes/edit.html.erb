<!-- Validation failure messages -->
<% if @prize.errors.any? %>
  <% @prize.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Prize #<%= @prize.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_prize/<%= @prize.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for name -->

      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>


        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @prize.name %>">

      </div>



      <!-- Label and input for picture_url -->

      <div class="form-group">
        <label for="picture_url" class="control-label">
          Picture url
        </label>


        <input type="text" id="picture_url" name="picture_url" placeholder="Picture url" class="form-control" value="<%= @prize.picture_url %>">

      </div>



      <!-- Label and input for sponsor -->

      <div class="form-group">
        <label for="sponsor" class="control-label">
          Sponsor
        </label>


        <input type="text" id="sponsor" name="sponsor" placeholder="Sponsor" class="form-control" value="<%= @prize.sponsor %>">

      </div>



      <!-- Label and input for chat_id -->

      <div class="form-group">
        <label for="chat_id" class="control-label">
          Chat
        </label>


        <input type="text" id="chat_id" name="chat_id" placeholder="Chat" class="form-control" value="<%= @prize.chat_id %>">

      </div>



      <button class="btn btn-warning">
        Update Prize
      </button>
      or

      <a href="/prizes/<%= @prize.id %>">Cancel</a>


    </form>

  </div>
</div>
